<body class="background" style="background-image: url('images/background.png');
    background-repeat: no-repeat;
    background-size: 1536px auto;">
  <h2 class="admin">Admin Console</h2>
  <form id="login" action="/login" method="post">

    <div class="c-username">
      <input class="UP" type="text" placeholder="Full Name" name="name">
    </div>

    <div class="c-username">
      <input class="UP" type="email" placeholder="Email" name="email">
    </div>

    <div class="c-password">
      <input class="UP" type="password" placeholder="Password" name="password">
    </div>

    <div class="login-btn">
      <button class="btn login-button" type="submit" name="button">Login</button>
    </div>

  </form>

  <a href="/" class="material-icons home">
    home
  </a>

