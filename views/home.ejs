<%- include("partials/header") -%>

  <h1>Home</h1>
  <p><%= home %></p>

  <% posts.forEach(function(post){ %>
    <% let postContent = post.body %>
    <h1><%= post.title %></h1>
    <% if(postContent.length > 100){ %>
    <p><%= post.body.substring(0, 100) + "..." %> <a class="readMore" href="/posts/<%= post._id %> ">Read More</a></p>
    <% }else{ %>
      <p><%= postContent %></p>
    <% } %>
  <% }) %>

<%- include("partials/footer") -%>
