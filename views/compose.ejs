    <h1>Compose</h1>

    <form class="" action="/compose" method="post">

      <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" class="title form-control" name="postTitle">
      </div>

      <select class="form-select c-select" name="selector" aria-label="Default select example">
